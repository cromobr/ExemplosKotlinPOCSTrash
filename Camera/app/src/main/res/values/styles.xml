<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.AppCompat.Dark.NoActionBar.FullScreen" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF9300</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#DC3B00</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">#1d1d1d</item>
        <item name="android:statusBarColor">#1d1d1d</item>
    </style> <!-- Base application theme. -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF9300</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#DC3B00</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">#1d1d1d</item>
        <item name="android:statusBarColor">#1d1d1d</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="inputIdentificaCliente" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:singleLine">true</item>
        <item name="boxBackgroundColor">#000</item>
        <item name="errorIconDrawable">@drawable/icon_erro</item>
        <item name="errorIconTint">@null</item>
        <item name="boxStrokeErrorColor">#DC3B00</item>
        <item name="errorTextColor">#DC3B00</item>
        <item name="boxStrokeColor">@color/cor_barra_inferior</item>
        <item name="placeholderTextColor">#80FFFFFF</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="fonteErro" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/hind_semibold</item>
</style>


    <style name="BotoesUnelevated" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:letterSpacing">0</item>
    </style>


    <style name="BotaoRadiusRight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">3dp</item>
        <item name="cornerSizeTopRight">3dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <style name="BotaoRadiusLeft">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">3dp</item>
        <item name="cornerSizeTopLeft">3dp</item>
    </style>

    <style name="BotoesTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="ButtonLaranja" parent="BotoesUnelevated">

    </style>
    <style name="ButtonTransparent" parent="BotoesTextButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="bottom_navigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily" >@font/hind_light</item>
        <item name="android:textSize">9sp</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="chips_textStyles_bold" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily" >@font/hind_bold</item>
        <item name="android:textSize">15.5sp</item>
    </style>
    <style name="chips_textStyles" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily" >@font/hind</item>
        <item name="android:textSize">15.5sp</item>
    </style>
    <style name="chips_tags_textStyles" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily" >@font/hind</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="chipPadrao" parent="@style/Widget.MaterialComponents.Chip.Entry">
        <item name="android:paddingEnd" >17dp</item>
        <item name="android:paddingStart" >17dp</item>
    </style>

    <style name="width_height_padrao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">74.2dp</item>
    </style>

    <style name="SairDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">#FFFFFF</item>
        <item name="buttonBarPositiveButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="hintAbrirMovimento" parent="TextAppearance.AppCompat">
        <item name="colorAccent">#80FFFFFF</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="colorControlNormal">#80FFFFFF</item>
        <item name="colorControlActivated">#80FFFFFF</item>
        <item name="colorControlHighlight">#80FFFFFF</item>
    </style>
    <style name="Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

    <style name="botaoIcon" parent="BotoesTextButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">#FFFFFF</item>
        <item name="cornerRadius">0dp</item>
        <item name="rippleColor">#4DFFFFFF</item>
    </style>

</resources>
